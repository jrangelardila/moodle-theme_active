{{!
    @template theme_active/footer

    Page footer.

    Example context (json):
    {
        "output": {
            "page_doc_link": "Documentation for this page",
            "supportemail": "<a href=\"#\">Contact site support</a>",
            "has_popover_links": true,
            "services_support": "Services and support",
            "login_info": "You are logged in as cute kitten",
            "moodle_release": "90210",
            "has_communication_links": true,
            "communication_url": "https://element:8081/#/room/#yourroom:synapse",
            "communication_link": "<a href=\"#\">Communication room</a>"
        }
    }
}}
<footer id="page-footer"
        class="footer-popover text-center text-lg-start w-100 m-0 p-0  {{{textcolorfooter}}}"
        style="background-color: {{{bgcolorfooter}}}">
    <div class="d-none">
        {{{ output.standard_end_of_body_html }}}
    </div>

    <div class="container-fluid p-4 pb-0">
        <section>
            <div class="row">
                <!-- About -->
                <div class="col-md-3 col-lg-3 col-xl-3 mx-auto mt-3">
                    <h6 class="text-uppercase mb-4 fw-bold">{{#str}} about_us, theme_active {{/str}}</h6>
                    <hr>
                    {{#footerlogo}}
                        <img src="{{{footerlogo}}}" alt="footerlogo" class="w-100 p-4"/>
                    {{/footerlogo}}
                    <p class="w-100 mt-4 text-justify">
                        {{{footerdescription}}}
                    </p>
                </div>

                <!-- Custom Links -->
                <div class="col-md-2 col-lg-2 col-xl-2 mx-auto mt-3">
                    <h6 class="text-uppercase mb-4 fw-bold">{{#str}} customlinks, theme_active {{/str}}</h6>
                    <hr>
                    {{#customlinks}}
                        <p>
                            <a href="{{{url}}}" target="_blank"
                               class="text-reset text-decoration-none {{{textcolorfooter}}}"
                               style="text-decoration: underline dotted;">
                                {{name}}
                            </a>
                        </p>
                    {{/customlinks}}
                </div>

                <!-- Contact -->
                <div class="col-md-4 col-lg-3 col-xl-3 mx-auto mt-3">
                    <h6 class="text-uppercase mb-4 fw-bold">{{#str}} contact_us, theme_active {{/str}}</h6>
                    <hr>
                    <p><i class="fas fa-home me-2"></i>{{{addrescontact}}}</p>
                    <p><i class="fas fa-envelope me-2"></i>{{{emailcontact}}}</p>
                    <p><i class="fas fa-phone me-2"></i>{{{pbxcontact}}}</p>
                    <a href="https://wa.me/{{{whatsappcontact}}}?text={{#str}}whatsaap_hi, theme_active{{/str}}"
                    target="_blank" class="{{{textcolorfooter}}}">
                    <i class="fab fa-whatsapp me-2"></i>{{{whatsappcontact}}}
                    </a>
                </div>

                <!-- Social Media -->
                <div class="col-md-3 col-lg-2 col-xl-2 mx-auto mt-3">
                    <h6 class="text-uppercase mb-4 fw-bold">{{#str}} follow_social_media, theme_active {{/str}}</h6>
                    <hr>
                    {{#socialmedia}}
                        <a class="btn btn-floating m-1 {{btnclass}}" href="{{{url}}}" role="button"
                           aria-label="{{{label}}}">
                            <i class="fab {{{class}}}"></i>
                        </a>
                    {{/socialmedia}}
                    <hr>
                    <div class="d-none">
                        {{{ output.standard_footer_html }}}
                    </div>
                </div>
            </div>
        </section>
    </div>

    <div class="text-center p-3 bg-opacity-75 bg-black text-white" id="copyright">
        Â© 2024 Copyright:
        <a class="text-white text-decoration-none" href="#">jrangelardila@gmail.com</a>
    </div>

    <div class="footer-content-debugging footer-dark bg-dark text-light">
        <div class="container-fluid footer-dark-inner">
            {{{ output.debug_footer_html }}}
        </div>
    </div>
</footer>
{{#js}}
    require(['theme_boost/footer-popover'], function(FooterPopover) {
    FooterPopover.init();
    });
{{/js}}